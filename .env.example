# AI Post Scheduler MCP Bridge Configuration
# Copy this file to .env and update with your actual credentials
# IMPORTANT: Add .env to .gitignore to keep credentials secure

# WordPress Credentials
WP_USERNAME=your-wp-username
WP_APP_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx

# MCP Bridge URL
MCP_BRIDGE_URL=https://your-site.com/wp-content/plugins/ai-post-scheduler/mcp-bridge.php

# Optional: Multiple environments
# WP_DEV_USERNAME=admin
# WP_DEV_PASSWORD=admin
# MCP_DEV_URL=http://localhost:8080/wp-content/plugins/ai-post-scheduler/mcp-bridge.php

# WP_STAGING_USERNAME=staging-user
# WP_STAGING_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx
# MCP_STAGING_URL=https://staging.example.com/wp-content/plugins/ai-post-scheduler/mcp-bridge.php

# WP_PROD_USERNAME=prod-user
# WP_PROD_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx
# MCP_PROD_URL=https://example.com/wp-content/plugins/ai-post-scheduler/mcp-bridge.php

# ============================================================
# Database Configuration
# ============================================================
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=wordpress

# ============================================================
# WordPress Configuration
# ============================================================
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=admin
WP_ADMIN_EMAIL=admin@example.com
WP_SITE_TITLE=WP AI Scheduler Dev
WP_SITE_URL=http://localhost:8080

# ============================================================
# Xdebug Configuration
# ============================================================
# Enable/disable Xdebug
XDEBUG_MODE=debug

# Xdebug client configuration
# For Linux/Mac: use host.docker.internal
# For Windows WSL2: use host.docker.internal
# For custom network: use your host IP
XDEBUG_CLIENT_HOST=host.docker.internal
XDEBUG_CLIENT_PORT=9003
XDEBUG_IDEKEY=VSCODE

# Xdebug logging (useful for debugging Xdebug itself)
XDEBUG_LOG=/tmp/xdebug.log
XDEBUG_LOG_LEVEL=7

# ============================================================
# PHP Configuration
# ============================================================
PHP_MEMORY_LIMIT=512M
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M
PHP_MAX_EXECUTION_TIME=300

# ============================================================
# Port Configuration
# ============================================================
# WordPress HTTP port (access via http://localhost:8080)
WP_PORT=8080

# Xdebug port for IDE connection
XDEBUG_PORT=9003

# phpMyAdmin port (access via http://localhost:8082)
PHPMYADMIN_PORT=8082

# MySQL port (for external database tools)
MYSQL_PORT=3307

# ============================================================
# Development Options
# ============================================================
# Enable detailed entrypoint script output
ENTRYPOINT_DEBUG=1

# PHP IDE Configuration (for Xdebug)
PHP_IDE_CONFIG=serverName=localhost
