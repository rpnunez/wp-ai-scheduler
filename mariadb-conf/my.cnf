[mysqld]
# Custom MariaDB configuration for development
# Optimizes for local development with reduced logging and resource usage

# Connection settings
max_connections = 50
connect_timeout = 10
wait_timeout = 600

# Memory settings (suitable for local development)
key_buffer_size = 16M
max_allowed_packet = 16M
thread_stack = 256K
thread_cache_size = 8
sort_buffer_size = 512K
net_buffer_length = 8K

# MyISAM settings
myisam_recover_options = BACKUP
myisam_sort_buffer_size = 8M

# InnoDB settings (WordPress uses InnoDB by default)
innodb_buffer_pool_size = 128M
innodb_log_file_size = 64M
innodb_log_buffer_size = 8M
innodb_flush_log_at_trx_commit = 2
innodb_lock_wait_timeout = 50
innodb_file_per_table = 1

# Query cache (disabled in MariaDB 10.6+, but kept for compatibility)
query_cache_size = 0
query_cache_type = 0

# Logging - reduced for development to save disk space
# Binary logging disabled to save space in development
skip-log-bin
# General query log disabled by default
general_log = 0
# Slow query log - useful for debugging
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow-query.log
long_query_time = 2

# Error log
log_error = /var/log/mysql/error.log

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Don't resolve hostnames (faster connections)
skip-name-resolve
